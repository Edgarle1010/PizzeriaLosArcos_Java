<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@color/quarter_color"
    android:layout_height="match_parent"
    android:windowTranslucentStatus="false"
    tools:context=".Controller.LoginActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ProgressBar>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/email_login_form"
        android:paddingTop="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_description_text"
            android:text="@string/text_login_description"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/email_text"
            android:text="@string/email_hint"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ic_baseline_email_24">
            </ImageView>

            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:layout_toEndOf="@id/email_icon"
                android:layout_marginStart="10dp"
                android:imeOptions="actionNext"
                android:nextFocusDown="@id/password"
                android:maxLines="1">
            </AutoCompleteTextView>
            <requestFocus></requestFocus>

        </RelativeLayout>

        <TextView
            android:id="@+id/password_text"
            android:text="@string/password_hint"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/password_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ic_baseline_https_24">
            </ImageView>

            <EditText
                android:id="@+id/password"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_toEndOf="@id/password_icon"
                android:layout_marginStart="10dp"
                android:imeOptions="actionDone"
                android:nextFocusDown="@id/email_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <requestFocus></requestFocus>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_login_button"
            android:text="@string/text_login_button"
            android:backgroundTint="@color/secondary_color"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:layout_width="match_parent"
            android:onClick="onClick"
            android:layout_height="60dp">
        </com.google.android.material.button.MaterialButton>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recovery_text"
                android:text="@string/forgot_password_text"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/signIn_text"
                android:text="@string/signin_text_view"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:windowTranslucentStatus="false"
    tools:context=".Controller.MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="45dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pizzas_image_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:scaleType="fitXY">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/burgers_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/salads_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/food_dishes_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/seafood_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/breakfasts_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/drinks_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/desserts_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/snow_milkshakes_image_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/kids_image_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:scaleType="fitXY">
                </ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>